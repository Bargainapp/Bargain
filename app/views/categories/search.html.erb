<div class="container ">
<div class="row">
    <% @categories.each do |category| %>
        <div class="col-md-4">
          <div class="sec">

        <%= link_to (image_tag category.image.url(:medium), class: 'img'), products_path%>
        <div class="under">
        <hr class="line">
        <h3 class="cheading">
        <%= category.title %></h3>
        <%= link_to 'Show', category %>
        <%= link_to 'Edit', edit_category_path(category) %>
        <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
      </div>
    </div>


    <% end %>
  </div>
</div>
