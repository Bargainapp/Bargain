<p id="notice"><%= notice %></p>

<h1>Listing Outlets</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Outlet</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @outlets.each do |outlet| %>
      <tr>
        <%= link_to (image_tag outlet.image.url(:medium)), outlet%>        
        <td><%= outlet.title %></td>
        <td><%= outlet.description %></td>
        <td><%= outlet.price %></td>
        <td><%= outlet.outlet %></td>
        <td><%= outlet.company %></td>
        <td><%= link_to 'Show', outlet %></td>
        <td><%= link_to 'Edit', edit_outlet_path(outlet) %></td>
        <td><%= link_to 'Destroy', outlet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

