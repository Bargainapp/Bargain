<div class="container ">
  <div class="row">
  <% @products.each do |product| %>
  <div class="col-md-4">
    <div class="sec">

      <%= link_to (image_tag product.image.url(:medium),class: 'img'), companies_path%>
      <div class="under">
      <hr class="line">
      <h3 class="cheading">
      <%= product.title %></h3>
      <%= product.category %>
      <%= link_to 'Show', product %>
      <%= link_to 'Edit', edit_product_path(product) %>
      <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
    </div>
  </div>
  <% end %>
</div>
</div>
